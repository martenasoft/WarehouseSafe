{% extends 'base.html.twig' %}

{% block title %}Safe index{% endblock %}

{% block body %}
    <h1>Safe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sum</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for safe in safes %}
            <tr>
                <td>{{ safe.id }}</td>
                <td>{{ safe.sum }}</td>
                <td>{{ safe.name }}</td>
                <td>{{ safe.description }}</td>
                <td>
                    <a href="{{ path('safe_show', {'id': safe.id}) }}">show</a>
                    <a href="{{ path('safe_edit', {'id': safe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('safe_new') }}">Create new</a>
{% endblock %}
